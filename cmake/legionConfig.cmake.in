# - Config file for Legion
# It defines the following variables
#  LEGION_INCLUDE_DIRS - include directories for FooBar
#  LEGION_LIBRARIES    - libraries to link against
#  LEGION_EXECUTABLE   - the bar executable
 
FIND_LIBRARY(LEGION_LIBRARY legion
    PATHS @CMAKE_INSTALL_PREFIX@/lib
    NO_DEFAULT_PATH
)

FIND_LIBRARY(LEGION_MAPPERS_LIBRARY legion_mappers
    PATHS @CMAKE_INSTALL_PREFIX@/lib
    NO_DEFAULT_PATH
)

FIND_LIBRARY(REALM_LIBRARY realm
    PATHS @CMAKE_INSTALL_PREFIX@/lib
    NO_DEFAULT_PATH
)

SET(LEGION_LIBRARIES ${LEGION_LIBRARY}
    ${LEGION_MAPPERS_LIBRARY} ${REALM_LIBRARY})

FIND_PATH(LEGION_INCLUDE_DIR common.h
    PATHS @CMAKE_INSTALL_PREFIX@/include
    NO_DEFAULT_PATH
)

SET(LEGION_INCLUDE_DIRS "${LEGION_INCLUDE_DIR}"
        "${LEGION_INCLUDE_DIR}/legion"
        "${LEGION_INCLUDE_DIR}/realm"
        "${LEGION_INCLUDE_DIR}/mappers")

set (LEGION_CXX_FLAGS @CMAKE_CXX_FLAGS@)
set (LEGION_LIB_FLAGS @CMAKE_CXX_FLAGS@)
SET_SOURCE_FILES_PROPERTIES(${LEGION_INCLUDE_DIR}/legion/legion.inl PROPERTIES HEADER_FILE_ONLY 1)

SET (LEGION_CMAKE_DIR "${LEGION_INCLUDE_DIR}/cmake")


